<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/tablet_padding"
    android:paddingRight="@dimen/tablet_padding"
    android:paddingTop="@dimen/tablet_padding"
    android:paddingBottom="@dimen/tablet_padding">
    <TextView
        android:id="@+id/textViewColor"
        android:layout_width="10dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/phone_padding"
        android:background="@color/grey"
        android:text=""
        android:textSize="@dimen/phone_text_size_list_item" />
    <TextView
        android:id="@+id/textViewProductType"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="F0000X00000"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewFacility"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="OSFE1"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewProductionLevel"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="FOL"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewRoute"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="V0000X"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewPosition"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="01"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewOperation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="1234"
        android:textSize="@dimen/tablet_text_size_list_item" />
    <TextView
        android:id="@+id/textViewCTPlan"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingRight="@dimen/tablet_padding"
        android:text="00:00"
        android:textSize="@dimen/tablet_text_size_list_item" />
</LinearLayout>